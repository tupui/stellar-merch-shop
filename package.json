{
  "name": "stellar-merch-store-admin",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "bun run start",
    "start": "concurrently --kill-others-on-fail --names stellar,vite -c gray,green --pad-prefix \"stellar scaffold watch --build-clients\" \"vite\"",
    "nfc-server": "cd nfc-server && node index.js",
    "dev:with-nfc": "concurrently --kill-others-on-fail --names nfc,stellar,vite -c blue,gray,green \"bun run nfc-server\" \"stellar scaffold watch --build-clients\" \"vite\"",
    "build": "tsc -b && vite build",
    "install:contracts": "bun install --workspace=packages && bun run build --workspace=packages",
    "preview": "vite preview",
    "lint": "eslint .",
    "format": "prettier . --write"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@creit.tech/stellar-wallets-kit": "^1.9.5",
    "@noble/secp256k1": "^3.0.0",
    "@stellar/design-system": "^3.2.6",
    "@stellar/stellar-sdk": "^14.4.2",
    "@stellar/stellar-xdr-json": "^23.0.0",
    "@tanstack/react-query": "^5.90.12",
    "lossless-json": "^4.3.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-router-dom": "^7.10.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/lodash": "^4.17.21",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-dom": "^2.3.12",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-react-x": "^2.3.12",
    "glob": "^13.0.0",
    "globals": "^16.5.0",
    "lint-staged": "^16.2.7",
    "prettier": "3.6.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.49.0",
    "vite": "^7.2.7",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vite-plugin-wasm": "^3.5.0"
  },
  "lint-staged": {
    "**/*": [
      "eslint --fix --no-warn-ignored",
      "prettier --write --ignore-unknown"
    ]
  }
}
